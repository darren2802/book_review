<hr>
<h3>Book Search Result</h3>
<section class='book-details'>
  <p>Title: <%= search_result.book.title %></p>
  <section id='book-authors'>
    <p>Author(s):</p>
    <% search_result.book.authors.each do |author| %>
      <%= author %>
    <% end %>
  </section>
  <br>
  <section id='book-genres'>
    <p>Genre(s):</p>
    <% if search_result.book.genres %>
      <% search_result.book.genres.each do |genre| %>
        <%= genre %>
      <% end %>
    <% else %>
      <p>No genres found for this book</p>
    <% end %>
  </section>
</section>
<section class='book-reviews'>
  <p>Reviews:</p>
  <% search_result.reviews.each do |review| %>
    <p><%= review %></p>
  <% end %>
</section>
